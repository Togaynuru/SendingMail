@{
    ViewData["Title"] = "Index";
}

<h4>Contact Me</h4>
<hr />
<div class="row">
    <div class="col-md-4">

        @*<div class="alert alert-success mb-2" role="alert" id="message">*@
        @*@TempData["Message"]*@


        @*    @if (ViewBag.Success != null)
        {
            <div class="alert alert-info mb-2">
